<!DOCTYPE html>
<html>
<head>
  <title>Otterflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<h1><%= link_to "Otterflow", root_path %></h1>
	<% if signed_in?  %>
		<div id='log-out'>
			<%= link_to "Log Out", logout_sessions_path, method: "delete" %>
		</div>
	<% else %>
		<div id='logButton'>
			<%= link_to "Login", new_session_path %>
		  <%= link_to "Sign up", new_user_path %>
		</div>
	<% end %>

	<%= render "shared/flash_messages" %>

  <%= yield %>
  
</body>
</html>
